    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <Title>Microsoft Graveyard</Title>
    <Description>ðŸª¦ The virtual graveyard for remembering those killed by Microsoft</Description>
    <Authors>VictorFrye</Authors>
    <RepositoryUrl>https://github.com/victorfrye/dotcom</RepositoryUrl>

    <AssemblyName>VictorFrye.Graveyard</AssemblyName>
    <RootNamespace>VictorFrye.Graveyard</RootNamespace>

    <PackageLicenseFile>LICENSE</PackageLicenseFile>
